<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="MauiEnvironmentRibbon.SampleApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="using:MauiEnvironmentRibbon.SampleApp.Pages"
       xmlns:tabs="using:MauiEnvironmentRibbon.SampleApp.Pages.Tabs"
       Title="MauiEnvironmentRibbon.SampleApp"
       FlyoutBehavior="Flyout">
    <FlyoutItem Title="Main">
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate pages:MainPage}"
                      Route="main"/>
    </FlyoutItem>

    <FlyoutItem Title="Tabs">
        <Tab Title="Tab 1">
            <ShellContent ContentTemplate="{DataTemplate tabs:Tab1Page}" Route="tab1"/>
        </Tab>

        <Tab Title="Tab 2">
            <ShellContent ContentTemplate="{DataTemplate tabs:Tab2Page}" Route="tab2"/>
        </Tab>
    </FlyoutItem>
</Shell>

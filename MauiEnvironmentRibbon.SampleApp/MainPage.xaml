<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiEnvironmentRibbon.SampleApp.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image HeightRequest="185"
                   Aspect="AspectFit"
                   SemanticProperties.Description="dot net bot in a race car number eight"
                   Source="dotnet_bot.png"/>

            <Label Style="{StaticResource Headline}" Text="Hello, World!"/>

            <Label Style="{StaticResource SubHeadline}" Text="Welcome to &#10;.NET Multi-platform App UI"/>

            <Button HorizontalOptions="Fill"
                    Clicked="OnCounterClicked"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Text="Go to Page2"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

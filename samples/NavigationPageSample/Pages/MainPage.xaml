<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiEnvironmentRibbon.NavigationPageSample.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <Grid Padding="30,0">
            <Image Source="cat_01"/>

            <VerticalStackLayout Spacing="25">
                <Button Clicked="NavigateToContentPageWithGridClicked" Text="Navigate to Content Page with Grid"/>

                <Button Clicked="NavigateToTabbedPageClicked" Text="Navigate to Tabbed Page"/>

                <Button Clicked="NavigateToFlyoutPageClicked" Text="Navigate to Flyout Page"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
